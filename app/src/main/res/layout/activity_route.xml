<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    android:background="#ffff99">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Point From"
        android:textSize="19sp"
        android:paddingBottom="10dp" />

    <!-- Поле для улицы (Откуда) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Улица"
            android:textSize="19dp"
            android:paddingEnd="30dp"
            android:layout_marginLeft="7dp"/>

        <EditText
            android:id="@+id/edtStreetFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />
    </LinearLayout>

    <!-- Поле для дома (Откуда) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:text="Дом"
            android:textSize="19dp"
            android:layout_marginLeft="7dp"/>

        <EditText
            android:id="@+id/edtHouseFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />
    </LinearLayout>

    <!-- Поле для этажа (Откуда) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="Этаж"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/edtFloorFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Point To"
        android:textSize="19sp"
        android:paddingBottom="10dp"
        android:paddingTop="11dp" />

    <!-- Поле для улицы (Куда) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Улица"
            android:textSize="19dp"
            android:paddingEnd="30dp"
            android:layout_marginLeft="7dp"/>

        <EditText
            android:id="@+id/edtStreetTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />
    </LinearLayout>

    <!-- Поле для дома (Куда) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Дом"
            android:layout_marginLeft="7dp"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/edtHouseTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />
    </LinearLayout>

    <!-- Поле для этажа (Куда) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="Этаж"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/edtFloorTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number" />
    </LinearLayout>

    <!-- Кнопка OK -->
    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="OK" />

</LinearLayout>
